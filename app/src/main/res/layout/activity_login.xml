<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_login_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.jiangjh.tripapp.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="无密码快捷登陆">
    </com.jiangjh.tripapp.widget.TitleBar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/tv_phone_label_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="手机号"
                android:textColor="#5C5C5C"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/iv_line_login"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="14dp"
                android:layout_toRightOf="@id/tv_phone_label_login"
                android:background="#EDEDED"/>

            <com.jiangjh.tripapp.widget.ClearEditText
                android:id="@+id/edt_phone_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/btn_security_login"
                android:layout_toRightOf="@id/iv_line_login"
                android:background="@null"
                android:hint="请输入正确的手机号"
                android:inputType="number"
                android:maxLength="11"
                android:textColor="#5C5C5C"
                android:textColorHint="#CBCBD0"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/btn_security_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/security_button_bg"
                android:gravity="center"
                android:text="验证码"
                android:textColor="@color/security_code_text_color"
                android:textSize="12sp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#EDEDED"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/tv_security_label_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="验证码"
                android:textColor="#5C5C5C"
                android:textSize="16sp"/>

            <com.jiangjh.tripapp.widget.ClearEditText
                android:id="@+id/edt_security_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/tv_security_label_login"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="6"
                android:textColor="#5C5C5C"
                android:textColorHint="#CBCBD0"
                android:textSize="16sp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#EDEDED"/>
        </RelativeLayout>


        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/main_btn_selector"
            android:enabled="false"
            android:text="登陆"
            android:textColor="@drawable/main_btn_text_selector"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cbx_agreement_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:button="@drawable/btn_check"
                android:checked="true"
                android:paddingLeft="4dp"
                android:text="我已阅读并同意"
                android:textColor="#333333"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_agreement_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《用户协议》"
                android:textColor="#567FD3"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>